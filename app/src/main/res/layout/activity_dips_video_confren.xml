<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DipsVideoConfren"
    android:background="@color/bg2">

    <FrameLayout
        android:id="@+id/big_video_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg2">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg2">

        <LinearLayout
            android:id="@+id/llUsersVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/video_list_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/video_list_contain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_280"
                android:gravity="center">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/userVideoList"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_280"
                    android:clipChildren="true">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llUsersVideo"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ads_info1"
                android:layout_marginTop="@dimen/dp_30"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/confirm_accept"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_not"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/oval_background_10dp"
                    android:backgroundTint="@color/zm_v1_red_A100"
                    android:layout_margin="5dp"
                    android:text="@string/tidak_not"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/oval_background_10dp"
                    android:backgroundTint="@color/Blue"
                    android:layout_margin="5dp"
                    android:text="@string/setuju_accept"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/layout_bottom_action_bar"/>

</FrameLayout>
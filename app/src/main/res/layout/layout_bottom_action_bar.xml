<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:background="@color/white"
    android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:minWidth="56dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon_video"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="onClickVideo"
                android:src="@drawable/icon_video_off"
                android:visibility="gone"
                app:tint="@color/bg_cif_success" />
            <ImageView
                android:elevation="2dp"
                android:background="@drawable/oval_background_10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="btnmute"
                android:id="@+id/icon_audio"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:onClick="onClickAudio"
                android:src="@drawable/v_unmute" />
            <Button
                android:elevation="2dp"
                android:textSize="12dp"
                android:id="@+id/icon_file"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/oval_background_10dp"
                android:drawableStart="@drawable/v_file"
                android:text="File"
                android:onClick="onClickFile"
                android:textColor="@color/zm_button"
                android:textStyle="bold" />
            <Button
                android:elevation="2dp"
                android:textSize="12dp"
                android:id="@+id/icon_chat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/oval_background_10dp"
                android:drawableStart="@drawable/v_chat"
                android:drawablePadding="5dp"
                android:text="@string/chat"
                android:onClick="onClickChat"
                android:textColor="@color/zm_button"
                android:textStyle="bold" />
            <Button
                android:elevation="2dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/oval_background_10dp"
                android:backgroundTint="@color/zm_v1_red_A100"
                android:onClick="onClickEnd"
                android:text="@string/tutup"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
</LinearLayout>
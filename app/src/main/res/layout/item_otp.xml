<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan One Time Password untuk verifikasi data anda. Kode OTP telah dikirim ke +62813 xxxx xxxx"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <com.dhairytripathi.library.EditTextPin
        android:id="@+id/kode_otp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:underlineColor="@color/transparent"
        android:background="@drawable/bg_otp"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnVerifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/oval_background_10dp"
        android:backgroundTint="@color/bg_cif"
        android:text="Verifikasi"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_resend_otp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Kirim ulang kode OTP"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/bg_cif"/>
        <TextView
            android:id="@+id/timer_otp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#686868"/>
    </LinearLayout>
</LinearLayout>